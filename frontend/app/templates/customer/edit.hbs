<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <h1>
    {{#if model.isNew}}
      Create customer
    {{else}}
      Edit {{name}}
    {{/if}}
  </h1>

  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input id='name' placeholder='Customer name' value=name class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">
        {{#if model.isNew}}
          Create customer
        {{else}}
          Update customer
        {{/if}}
      </button>

      {{#unless model.isNew}}
        <button type="button" {{action 'delete' on='doubleClick'}} class="btn btn-danger pull-right" data-tooltip title="Doubleclick to delete">
          Delete customer
        </button>
      {{/unless}}
    </div>
  </div>
</form>
