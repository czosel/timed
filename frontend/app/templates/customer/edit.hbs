<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <h1 class="dib" data-model-id={{model.id}}>
    {{#liquid-if model.isNew use='toUp'}}
      Create customer
    {{else}}
      {{model.name}}
    {{/liquid-if}}
  </h1>

  {{#input-label class="form-group" labelClass="col-sm-2" label="Name" as |labelId|}}
    <div class="col-sm-10">
      {{input id=labelId placeholder='Customer name' value=model.name class='form-control' autocomplete='false'}}
    </div>
  {{/input-label}}
  {{#input-label class="form-group" labelClass="col-sm-2" label="Email" as |labelId|}}
    <div class="col-sm-10">
      {{input id=labelId type='email' placeholder='Email' value=model.email class='form-control' autocomplete='false'}}
    </div>
  {{/input-label}}
  {{#input-label class="form-group" labelClass="col-sm-2" label="Website" as |labelId|}}
    <div class="col-sm-10">
      {{input id=labelId type='url' placeholder='Website' value=model.website class='form-control' autocomplete='false'}}
    </div>
  {{/input-label}}
  {{#input-label class="form-group" labelClass="col-sm-2" label="Comment" as |labelId|}}
    <div class="col-sm-10">
      {{textarea id=labelId placeholder='Comment' value=model.comment class='form-control'}}
    </div>
  {{/input-label}}
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">
        {{#if model.isNew}}
          Create customer
        {{else}}
          Update customer
        {{/if}}
      </button>

      {{#unless model.isNew}}
        {{#delete-button class='pull-right' action='delete'}}
          Delete customer
        {{/delete-button}}
      {{/unless}}
    </div>
  </div>
</form>
