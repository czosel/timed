<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <h1>
    {{#if model.isNew}}
      Create customer
    {{else}}
      Edit {{model.name}}
    {{/if}}
  </h1>

  <div class="form-group">
    <label for="customer-name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input id='customer-name' placeholder='Customer name' value=model.name class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="customer-email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      {{input id='customer-email' type='email' placeholder='Email' value=model.email class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="customer-website" class="col-sm-2 control-label">Website</label>
    <div class="col-sm-10">
      {{input id='customer-website' type='url' placeholder='Website' value=model.website class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="customer-comment" class="col-sm-2 control-label">Comment</label>
    <div class="col-sm-10">
      {{textarea id='customer-comment' placeholder='Comment' value=model.comment class='form-control'}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">
        {{#if model.isNew}}
          Create customer
        {{else}}
          Update customer
        {{/if}}
      </button>

      {{#unless model.isNew}}
        {{#delete-button class='pull-right' action='delete'}}
          Delete customer
        {{/delete-button}}
      {{/unless}}
    </div>
  </div>
</form>
