<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <h1>
    {{#if model.isNew}}
      Create customer
    {{else}}
      Edit {{name}}
    {{/if}}
  </h1>

  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Customer name</label>
    <div class="col-sm-10">
      {{input id='name' placeholder='Username' value=name class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">
        {{#if model.isNew}}
          Create customer
        {{else}}
          Update customer
        {{/if}}
      </button>
    </div>
  </div>
</form>
