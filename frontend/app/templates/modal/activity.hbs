{{#modal-dialog title='Edit activity' ok='save' okText='Save' close='closeModal' delete='delete'}}
  <form class="form" {{action 'ok' on='submit' target=view}}>
    <div class="form-group">
      <label for="task">Task</label>
      {{ember-selectize
        id              = 'task'
        content         = sortedTasks
        selection       = task
        optionGroupPath = 'project.name'
        optionLabelPath = 'content.name'
        optionValuePath = 'content.id'
        }}
    </div>
    <div class="form-group">
      <label for="comment">Comment</label>
      {{textarea id='comment' value=comment class='form-control'}}
    </div>
    <div class="form-group">
      <label for="from">From</label>
      {{input id='from' value=from class='form-control' placeholder=dateFormat}}
    </div>
    <div class="form-group">
      <label for="to">To</label>
      {{input id='to' value=to class='form-control' placeholder=dateFormat}}
    </div>
    <div class="form-group">
      <label for="review">Review</label>
      {{input id='review' type='checkbox' checked=review class='form-control'}}
    </div>
  </form>
{{/modal-dialog}}
