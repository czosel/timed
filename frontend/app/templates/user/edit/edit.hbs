{{#liquid-if model.isNew use='toUp'}}
  <h1>Create user</h1>

  <br>
{{/liquid-if}}

<form class="form-horizontal" {{action 'submit' on='submit'}}>
  {{#input-label class="form-group" labelClass="col-sm-2" label="First name" as |labelId|}}
    <div class="col-sm-10">
      {{input id=labelId placeholder='First name' value=model.firstName class='form-control' autocomplete='false'}}
    </div>
  {{/input-label}}
  {{#input-label class="form-group" labelClass="col-sm-2" label="Last name" as |labelId|}}
    <div class="col-sm-10">
      {{input id=labelId placeholder='Last name' value=model.lastName class='form-control' autocomplete='false'}}
    </div>
  {{/input-label}}
  {{#input-label class="form-group" labelClass="col-sm-2" label="Username" as |labelId|}}
    <div class="col-sm-10">
      {{input id=labelId placeholder='Username' value=model.name class='form-control' autocomplete='false'}}
    </div>
  {{/input-label}}
  {{#input-label class="form-group" labelClass="col-sm-2" label="Password" as |labelId|}}
    <div class="col-sm-10">
      {{input id=labelId placeholder='Password' type='password' value=model.password class='form-control' autocomplete='false'}}
    </div>
  {{/input-label}}
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">
        {{#if model.isNew}}
          Create user
        {{else}}
          Update user
        {{/if}}
      </button>

      {{#unless model.isNew}}
        {{#delete-button class='pull-right' action='delete'}}
          Delete user
        {{/delete-button}}
      {{/unless}}
    </div>
  </div>
</form>
