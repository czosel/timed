{{#if model.isNew}}
  <h1>Create user</h1>

  <br>
{{/if}}

<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Username</label>
    <div class="col-sm-10">
      {{input id='name' placeholder='Username' value=name class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="firstName" class="col-sm-2 control-label">First name</label>
    <div class="col-sm-10">
      {{input id='firstName' placeholder='First name' value=firstName class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="lastName" class="col-sm-2 control-label">Last name</label>
    <div class="col-sm-10">
      {{input id='lastName' placeholder='Last name' value=lastName class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      {{input id='password' placeholder='Password' type='password' value=password class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">
        {{#if model.isNew}}
          Create user
        {{else}}
          Update user
        {{/if}}
      </button>

      {{#unless model.isNew}}
        <button type="button" {{action 'delete' on='doubleClick'}} class="btn btn-danger pull-right tip" title="Doubleclick to delete">
          Delete user
        </button>
      {{/unless}}
    </div>
  </div>
</form>
