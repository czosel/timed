{{#liquid-if model.isNew use='toUp'}}
  <h1>Create user</h1>

  <br>
{{/liquid-if}}

<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <div class="form-group">
    <label for="{{userFirstName.elementId}}" class="col-sm-2 control-label">First name</label>
    <div class="col-sm-10">
      {{input viewName='userFirstName' placeholder='First name' value=model.firstName class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="{{userLastName.elementId}}" class="col-sm-2 control-label">Last name</label>
    <div class="col-sm-10">
      {{input viewName='userLastName' placeholder='Last name' value=model.lastName class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="{{userName.elementId}}" class="col-sm-2 control-label">Username</label>
    <div class="col-sm-10">
      {{input viewName='userName' placeholder='Username' value=model.name class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="{{userPassword.elementId}}" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      {{input viewName='userPassword' placeholder='Password' type='password' value=model.password class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">
        {{#if model.isNew}}
          Create user
        {{else}}
          Update user
        {{/if}}
      </button>

      {{#unless model.isNew}}
        {{#delete-button class='pull-right' action='delete'}}
          Delete user
        {{/delete-button}}
      {{/unless}}
    </div>
  </div>
</form>
