{{#if model.isNew}}
  <h1>Create team</h1>

  <br>
{{/if}}

<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input id='name' placeholder='Team name' value=name class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="users" class="col-sm-2 control-label">Users</label>
    <div class="col-sm-10">
      {{view 'select'
             id               = 'users'
             class            = 'form-control'
             content          = allUsers.content
             selectionBinding = 'users'
             multiple         = true
             optionLabelPath  = 'content.longName'
             optionValuePath  = 'content'
             }}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">
        {{#if model.isNew}}
          Create team
        {{else}}
          Update team
        {{/if}}
      </button>

      {{#unless model.isNew}}
        <button type="button" {{action 'delete' on='doubleClick'}} class="btn btn-danger pull-right tip" title="Doubleclick to delete">
          Delete team
        </button>
      {{/unless}}
    </div>
  </div>
</form>
