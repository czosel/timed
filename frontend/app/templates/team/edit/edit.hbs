{{#liquid-if model.isNew use='toUp'}}
  <h1>Create team</h1>

  <br>
{{/liquid-if}}

<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <div class="form-group">
    <label for="{{teamName.elementId}}" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input viewName='teamName' placeholder='Team name' value=model.name class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="{{teamUsers.elementId}}" class="col-sm-2 control-label">Users</label>
    <div class="col-sm-10">
      {{ember-selectize
        viewName         = 'teamUsers'
        content          = allUsers
        selection        = model.users
        multiple         = true
        optionLabelPath  = 'content.longName'
        optionValuePath  = 'content.id'
        }}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">
        {{#if model.isNew}}
          Create team
        {{else}}
          Update team
        {{/if}}
      </button>

      {{#unless model.isNew}}
        {{#delete-button class='pull-right' action='delete'}}
          Delete team
        {{/delete-button}}
      {{/unless}}
    </div>
  </div>
</form>
