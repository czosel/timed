<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">{{title}}</h4>
    </div>
    <div class="modal-body">
      {{yield}}
    </div>
    <div class="modal-footer">
      {{#if delete}}
        <button type="button" {{action 'delete' on='doubleClick'}} class="btn btn-danger pull-left tip" title="Doubleclick to delete">
          Delete
        </button>
      {{/if}}

      <button type="button" class="btn btn-default" data-dismiss="modal">{{closeText}}</button>
      <button type="button" class="btn btn-primary" {{action 'ok'}}>{{okText}}</button>
    </div>
  </div>
</div>
