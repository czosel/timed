<colgroup>
  <col width="32">
  <col width="100%">
</colgroup>
<thead>
  <tr>
    <th colspan="2">
      {{#if assignment.project.autocomplete}}
        <a href="{{assignment.project.autocomplete.url}}" class="no-font vam" target="_blank">
          <img src="{{assignment.project.autocomplete.logo}}" width="24" height="24">
        </a>
      {{/if}}

      &nbsp;

      {{#link-to 'project.edit' assignment.project}}
        {{assignment.project.name}}
      {{/link-to}}
    </th>
  </tr>
</thead>
<tbody>
  {{#each task in tasks}}
    <tr class="assigned-project-task">
      <td>{{track-task btnClass='btn-xs' task=task}}</td>
      <td>
        {{#link-to 'task.edit' assignment.project task}}
          {{task.name}}
        {{/link-to}}
      </td>
    </tr>
    {{#if task.duration}}
      <tr>
        <td class="bt0 ptn" colspan="2">
          {{task-progressbar task=task}}
        </td>
      </tr>
    {{/if}}
  {{/each}}
</tbody>
