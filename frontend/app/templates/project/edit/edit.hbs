{{#if model.isNew}}
  <h1>Create project</h1>

  <br>
{{/if}}

<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <div class="form-group">
    <label for="project-name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input id='project-name' placeholder='Project name' value=model.name class='form-control' autocomplete='false'}}
    </div>
  </div>
  <div class="form-group">
    <label for="project-customer" class="col-sm-2 control-label">Customer</label>
    <div class="col-sm-10">
      {{ember-selectize
        id              = 'project-customer'
        plugins         = null
        content         = customers
        selection       = model.customer
        optionLabelPath = 'content.name'
        optionValuePath = 'content.id'
        }}
    </div>
  </div>
  <div class="form-group">
    <label for="project-tracker" class="col-sm-2 control-label">Bugtracker</label>
    <div class="col-sm-10">
      {{ember-selectize
        id      = 'project-tracker'
        plugins = null
        content = trackers
        value   = model.tracker.type
        }}
    </div>
  </div>
  {{partial trackerPartial}}
  <div class="form-group">
    <label for="project-from" class="col-sm-2 control-label">From</label>
    <div class="col-sm-10">
      {{date-picker id='project-from' date=model.from}}
    </div>
  </div>
  <div class="form-group">
    <label for="project-to" class="col-sm-2 control-label">To</label>
    <div class="col-sm-10">
      {{date-picker id='project-to' date=model.to}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          {{input type='checkbox' checked=model.done}}
          Done
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">
        {{#if model.isNew}}
          Create project
        {{else}}
          Update project
        {{/if}}
      </button>

      {{#unless model.isNew}}
        {{#delete-button class='pull-right' action='delete'}}
          Delete project
        {{/delete-button}}
      {{/unless}}
    </div>
  </div>
</form>
