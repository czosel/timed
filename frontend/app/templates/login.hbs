<form class="form-horizontal" {{action 'authenticate' on='submit'}}>
  {{#input-label class="form-group" labelClass="col-sm-2" label="Login" as |labelId|}}
    <div class="col-sm-10">
      {{input id=labelId placeholder='Username' value=identification class='form-control' disabled=loading}}
    </div>
  {{/input-label}}
  {{#input-label class="form-group" labelClass="col-sm-2" label="Password" as |labelId|}}
    <div class="col-sm-10">
      {{input id=labelId placeholder='Password' type='password' value=password class='form-control' disabled=loading}}
    </div>
  {{/input-label}}
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          {{input type='checkbox' checked='cookie' disabled=loading}}
          Remember me
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary {{if loading 'loading'}}" disabled={{loading}}>Sign in</button>
    </div>
  </div>
</form>
